<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- 
		Namespaces 탭에서 "p" 옵션을 체크하면
		<property> 태그를 <bean> 태그의 p: 속성으로 바꿔서 사용할 수 있다.
	-->
	
	<bean id="addr" class="com.gdu.app01.xml03.Address" p:jibun="가산동" p:road="디지털로" p:zipCode="101" />

	<bean id="per" class="com.gdu.app01.xml03.Person" p:name="소나타" p:age="30" p:addr-ref="addr" /> <!-- 위에 id랑 ref랑 이름이 같아야 한다. -->



</beans>
